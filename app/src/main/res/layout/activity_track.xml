<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Track">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"/>

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/BackImageStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:src="@drawable/beatles_big"/>

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Yesterday (Remastered 2009)"/>

    <TextView
        android:id="@+id/artistName"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintHorizontal_bias="0"
        tools:text="The Beatles"/>

    <ImageButton
        android:id="@+id/toPlaylist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_view"
        android:src="@drawable/playlist"
        android:layout_marginTop="56dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/play"
        app:layout_constraintBottom_toTopOf="@id/durationName"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/play"
        android:layout_marginTop="40dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintStart_toEndOf="@id/toPlaylist"
        app:layout_constraintEnd_toStartOf="@id/toFavourite"
        app:layout_constraintBottom_toTopOf="@id/durationName"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="durationName,albumName,yearName,genreName,countyName"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0:29"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintVertical_bias="0"/>

    <ImageButton
        android:id="@+id/toFavourite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_view"
        android:src="@drawable/playlist"
        android:layout_marginTop="56dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toEndOf="@id/play"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintBottom_toTopOf="@id/durationName"/>

    <TextView
        android:id="@+id/durationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Продолжительность"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="#AEAFB4"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/durationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0:29"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/durationName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Альбом"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="#AEAFB4"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/durationName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/albumValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Yesterday (Remastered 2009)"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/albumName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/yearName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Год"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="#AEAFB4"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/yearValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1995"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/yearName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/genreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Жанр"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="#AEAFB4"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/yearName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/genreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Rock"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/genreName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/countyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Страна"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="#AEAFB4"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/genreName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/countryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Великобритания"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorOnSecondary"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/countyName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:clickable="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Yesterday (Remastered 2009)"
        android:textColor="?attr/colorPrimaryVariant"
        android:padding="16dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>