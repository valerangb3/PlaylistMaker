<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonsStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_ico_padding</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingStart">@dimen/setting_padding_s</item>
        <item name="android:paddingEnd">@dimen/setting_padding_e</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="thumbTint">?attr/colorSecondary</item>
        <item name="trackTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="BackButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:text">@string/app_back</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="icon">@drawable/back</item>
        <item name="iconPadding">28dp</item>
    </style>

    <style name="MainBackgroundStyle">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>


    <style name="LoupeStyle" parent="SearchIconStyle">
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/search_icon</item>
    </style>

    <style name="ResetTextStyle" parent="SearchIconStyle">
        <item name="android:layout_gravity">end|center</item>
<!--        <item name="android:layout_marginStart">14dp</item>-->
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:src">@drawable/clear_icon</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchIconStyle">
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:hint">@string/main_menu_search</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">40dp</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="cornerRadius">@dimen/search_radius</item>
    </style>

    <style name="SearchLayoutStyle">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>