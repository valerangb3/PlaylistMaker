<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_ico_padding</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">@dimen/setting_padding_s</item>
        <item name="android:paddingEnd">@dimen/setting_padding_e</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
        <!-- цвета для thumb and tracker -->
        <item name="thumbTint">?attr/colorPrimary</item>
        <item name="trackTint">?attr/colorPrimaryVariant</item>
<!--        <item name="thumbTint">#CDCFD4</item>-->
<!--        <item name="trackTint">#EFF1F3</item>-->
    </style>

    <style name="BackButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">start|center</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="icon">@drawable/back</item>
        <item name="iconPadding">28dp</item>
    </style>

    <style name="MainBackgroundStyle">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="LoupeStyle" parent="SearchIconStyle">
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/search_icon</item>
    </style>

    <style name="ResetTextStyle" parent="SearchIconStyle">
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/clear_icon</item>
    </style>

    <style name="SearchIconStyle">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:hint">@string/main_menu_search</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SearchLayoutStyle">
        <item name="android:backgroundTint">@color/yp_gray_light</item>
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="CommonTrackItemStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MusicalArtistStyle" parent="CommonTrackItemStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TrackTimeStyle" parent="CommonTrackItemStyle">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
        <item name="drawableStartCompat">@drawable/track_time_dot</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TrackNameTitleStyle">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TrackItemContainerStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="TrackItemInnerContainerStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TrackArrowStyle">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="ErrorContainer">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:text">@string/update_request</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="ErrorTextRequest">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>